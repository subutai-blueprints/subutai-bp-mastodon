{
    "name": "${environmentName}",
    "description": "Mastodon",
    "version": "0.0.4",
    "author": "https://github.com/lbthomsen",
    "containers": [
        {
            "hostname": "mastodon",
            "template": "debian-buster",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "https",
                    "domain": "${domainName}",
                    "internal-port": "80",
                    "external-port": "443"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/subutai-blueprints/subutai-bp-mastodon/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name",
                "value": "${domainName}"
            }, 
            {
                "key": "admin_user",
                "value": "${adminUser}"
            }, 
            {
                "key": "admin_email",
                "value": "${adminEmail}"
            },
            {
                "key": "admin_pwd",
                "value": "${adminPwd}"
            }
        ],
        "groups": [
            {
                "name": "mastodon",
                "hostnames": [
                    "mastodon"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "mastodon",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "adminUser": {
            "description": "Enter the owner user",
            "type": "string",
            "default": "owner.user.id",
            "validation": "[a-zA-Z0-9]+"
        }, 
        "adminEmail": {
            "description": "Enter the owner email (must work!)",
            "type": "string",
            "default": "owner.email.address",
            "validation": ".+"
        }, 
        "adminPwd": {
            "description": "Enter the owner password",
            "type": "string",
            "default": "owner.password",
            "validation": ".+"
        }, 
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "TINY",
            "validation": "MEDIUM,LARGE,HUGE"
        }
    }
}
